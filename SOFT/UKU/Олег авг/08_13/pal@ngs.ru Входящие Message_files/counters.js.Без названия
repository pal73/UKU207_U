$(document).ready( function() {

	var script = document.createElement('script');
	script.src = '//bs.yandex.ru/resource/watch.js';
	document.getElementById("counters").appendChild(script);

	var script1 = document.createElement('script');
	script1.text = 'try { var yaCounter188943 = new Ya.Metrika(188943); } catch(e){}';
	document.getElementById("counters").appendChild(script1);

	var script2 = document.createElement('script');
	var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
	script2.src = gaJsHost + "google-analytics.com/ga.js";
	document.getElementById("counters").appendChild(script2);

	var script3 = document.createElement('script');
	script3.text = 'try {var pageTracker = _gat._getTracker("UA-9803039-1"); pageTracker._trackPageview(); } catch(err) {}';
	document.getElementById("counters").appendChild(script3);

});
